<LoginScreen>:
    orientation: 'vertical'
    padding: 50
    spacing: 20

    Label:
        text: 'Login'
        font_size: 32
        size_hint_y: None
        height: self.texture_size[1]

    TextInput:
        id: username_input
        hint_text: 'Username'
        multiline: False
        write_tab: False

    TextInput:
        id: password_input
        hint_text: 'Password'
        multiline: False
        password: True
        write_tab: False

    Button:
        text: 'Login'
        size_hint_y: None
        height: 44
        on_press: root.do_login()

    Label:
        text: root.feedback
        color: (1, 0, 0, 1)  # Red color for error, change as needed
        size_hint_y: None
        height: self.texture_size[1]
